@model AccountLoginViewModel


<div class="row">
    <div class="col col-lg-4 mx-auto border border-1">
        <h5>Login</h5>
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <form asp-area="Identity"
              asp-controller="Account"
              asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2 mb-2">Login</button>
        </form>
        <a asp-area="Identity" asp-controller="Account" asp-action="Register"
           class="card-link">Register</a>
    </div>
</div>
