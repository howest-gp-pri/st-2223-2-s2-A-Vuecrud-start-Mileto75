
<div id="app">
    <div class="row">
        <div class="col col-lg-4 mx-auto">
            <h4>{{loginPageTitle}}</h4>
            <div class="alert alert-danger" v-if="hasError" role="alert">
                <ul>
                    <section v-for="error in errors">
                    <li>{{error[0]}}</li>
                    </section>
                </ul>
            </div>
            <section v-if="hasMessage">
                <div class="alert alert-primary" role="alert">
                    {{message}}
                </div>
            </section>

            <form v-on:submit.prevent="login" method="post">
                <div class="form-group">
                    <label>Username</label>
                    <input type="email" v-model="loginDto.username" class="form-control">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" v-model="loginDto.password" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary mt-2 mb-2">Login</button>
            </form>
            <div class="col col-lg-1 mx-auto" v-if="loading">
                <div class="spinner-grow spinner-grow-sm" role="status">

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/vue/vue.js"></script>
<script src="~/lib/axios/axios.js"></script>
<script src="~/js/Account/app.js"></script>
